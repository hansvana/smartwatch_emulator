{
  "manifest_version": 2,

  "name": "Smartwatch Emulator",
  "description": "Loads a page in an iframe that looks like a smartwatch",
  "version": "2016.1",
  "icons": { "48": "img/icon48.png",
            "128": "img/icon128.png" }
            ,
  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },
  "browser_action": {
   "default_icon": "img/icon.png"
  },
  "permissions": [
    "tabs", "http://*/*", "https://*/*", "file:///*"
  ]
  , "web_accessible_resources": [
        "watch.html", "img/applewatch.png", "img/samsunggear.png"
  ]
}
